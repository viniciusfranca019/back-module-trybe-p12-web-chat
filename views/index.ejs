<!doctype html>
<html>
  <head>
    <title>Webchat</title>
    <link rel="stylesheet" href="/css/chat.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.4/socket.io.js"></script>
  </head>
  <body>
    <h1 class="header"></h1>
    <div class="middle-items">
      <div class="side-intems">
        <form action="" class="nickname-form">
          <input
            type="text"
            placeholder="Digite seu nickname"
            class="nickInput"
            data-testid="nickname-box"
          >
          <button
            class="nicknameButton"
            type="button"
            data-testid="nickname-button"
          >
            Save
          </button>
        </form>
        <div>
          <ul class="userList">
          </ul>
        </div>
      </div>
      <ul class="chat">
        <%messageHistory.forEach(({ message, nickname, timestamp }) => {%>
          <li data-testid="message">
            <%=`${timestamp} - ${nickname}: ${message}`%> 
          </li>
        <%});%>   
      </ul>
    </div>
    <p class="userID"></p>
    <form action="" class="form-msg">
      <input
        class="msgInput"
        type="text"
        data-testid="message-box"
      />
      <button
        class="sendButton"
        type="button"
        data-testid="send-button"
      >
        Send
      </button>
    </form>
    <script src='/scripts/chat.js'></script>
  </body>
</html>